<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="idCardXF.Views.CoursesView"
             BackgroundColor="LightBlue"
             Title="Student Courses">
    <StackLayout Padding="0">
        <StackLayout Orientation="Horizontal" Margin="0,20,20,0" HorizontalOptions="End"   >
            <Label Text="Welcome" FontSize="20" FontAttributes="Bold"  TextColor="White"></Label>
            <Label Text="{ Binding SelectedStudent.Firstname}" FontAttributes="Bold"  FontSize="20" TextColor="White"></Label>
        </StackLayout>
        
    </StackLayout>
</ContentPage>