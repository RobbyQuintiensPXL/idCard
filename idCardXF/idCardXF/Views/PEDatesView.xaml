<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="idCardXF.Views.PEDatesView"
             BackgroundColor="LightBlue">
    <StackLayout Padding="0">
        <Grid>
            <StackLayout Padding="0" Margin="0">
                <Frame HeightRequest="330" HorizontalOptions="FillAndExpand">
                    <ListView ItemsSource="{Binding PEDates}" Margin="0,20,0,0" x:Name="CourseListView" CachingStrategy="RecycleElement">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View>
                                        <StackLayout VerticalOptions="CenterAndExpand" BackgroundColor="White">
                                            <Label Text="{Binding Date}" FontSize="25" HorizontalOptions="CenterAndExpand" VerticalTextAlignment="Center"></Label>
                                        </StackLayout>
                                    </ViewCell.View>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Frame>
            </StackLayout>
        </Grid>
    </StackLayout>
</ContentPage>